<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#FFFFFF"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBF5FB"
        android:padding="16dp">

        <!-- Wrapper LinearLayout to center the content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Existing LinearLayout content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/CustomerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d0d0cf"
                    android:gravity="left"
                    android:paddingBottom="9dp"
                    android:text="John"
                    android:textColor="#080808"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/OrderDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d0d0cf"
                    android:padding="1dp"
                    android:text="Ordered Date"
                    android:textColor="#2E4053"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/uploadedImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/no_profile_pic"
                    android:layout_gravity="center" />

                <EditText
                    android:id="@+id/etCustomerMessage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="top|start"
                    android:padding="8dp"
                    android:text="Customer Message" />

                <!-- Action Buttons -->

                <!-- Back Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnConfirmOrder"
                        android:layout_width="151dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="19dp"
                        android:backgroundTint="#1ABC9C"
                        android:padding="8dp"
                        android:text="Get Order"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnCancelOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#E74C3C"
                        android:padding="8dp"
                        android:text="Cancel Order"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

