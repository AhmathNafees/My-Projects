<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgimg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            tools:ignore="MissingClass" />

        <ImageView
            android:id="@+id/Main_Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="274dp"
            android:layout_marginTop="14dp"
            app:srcCompat="@drawable/img" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/setting_symbol" />
    </RelativeLayout>

    <EditText
        android:id="@+id/medicine_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Medicine Name" />

    <EditText
        android:id="@+id/medicine_brand"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/medicine_name"
        android:layout_marginTop="16dp"
        android:hint="Brand" />

    <EditText
        android:id="@+id/medicine_weight"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/medicine_brand"
        android:layout_marginTop="16dp"
        android:hint="Grams/Weight" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/medicine_weight"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:backgroundTint="#E84235"
        android:text="Submit"
        android:textSize="16sp"
        tools:cornerRadius="30dp" />
</LinearLayout>
